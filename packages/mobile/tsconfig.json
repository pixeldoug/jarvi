{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/screens/*": ["src/screens/*"],
      "@/components/*": ["src/components/*"],
      "@/services/*": ["src/services/*"],
      "@/types/*": ["../shared/src/types/*"],
      "@/utils/*": ["../shared/src/utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
