{
  "name": "@jarvi/shared",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "tokens:import": "node src/design-tokens/scripts/import-from-figma.js",
    "tokens:generate-web": "node src/design-tokens/scripts/generate-web-tokens.js",
    "tokens:generate-native": "node src/design-tokens/scripts/generate-native-tokens.js",
    "tokens:generate": "npm run tokens:import && npm run tokens:generate-web && npm run tokens:generate-native",
    "tokens:watch": "nodemon --watch src/design-tokens/figma --ext json --exec \"npm run tokens:generate\"",
    "generate:design-tokens": "node scripts/generate-tokens-simple.js",
    "generate:figma-tokens": "node scripts/generate-figma-compatible-tokens.js",
    "generate:semantic-variables": "node scripts/generate-semantic-variables.js",
    "generate:button-variants": "node scripts/generate-button-variants.js",
    "import:figma": "node scripts/import-figma-tokens.js",
    "test:design-tokens": "node scripts/test-design-tokens.js",
    "test:theme-system": "node scripts/test-theme-system.js"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/uuid": "^9.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3"
  }
}
